        <TextBox KeyUp="TB_TimeNextContorl_KeyUp" x:Name="TB_Input" Height="23" Margin="10,23,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155"/>
        <Label Content="Введите строку:" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BT_Result" Content="Вычислить" HorizontalAlignment="Left" Margin="12,51,0,0" VerticalAlignment="Top" Width="75" Click="BT_Result_Click"/>
        <Label Name="L_Sum" Content="Сумма: -" HorizontalAlignment="Left" Margin="170,20,0,0" VerticalAlignment="Top" Width="90"/>
        <Button x:Name="BT_Task" Content="Задание" HorizontalAlignment="Left" Margin="93,51,0,0" VerticalAlignment="Top" Width="74" Click="BT_Task_Click"/>
        <Button x:Name="BT_Clear" Content="Очистить" HorizontalAlignment="Left" Margin="172,51,0,0" VerticalAlignment="Top" Width="75" Click="BT_Clear_Click"/>
    </Grid>
</Window>
